    <script>
        $(document).on("click", "#delete", function () {
            var talentId = $(this).data('talentid');
            console.log(talentId);
            $('#btnDelete').click(function () {

                $.ajax({
                    url: 'http://localhost:62481/api/talents/' + talentId,
                    cache: false,
                    type: 'Delete',
